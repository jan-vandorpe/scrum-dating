                    <label for="haarkleuren">{{ titelhaar }}
                        <select data-placeholder="Kies voorkeur {{ titelhaar }} (je kan meerdere selecteren)" class="chosen-select" multiple style="width: 100%; margin-top: 20px;" tabindex="2" name="{{ titelhaar }}" id="{{ titelhaar }}">

